{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*", "./dist/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "downlevelIteration": true,
    "jsx": "react"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}